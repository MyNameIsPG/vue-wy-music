// 登录等颜色配置
$login-background = #db2c1f
$login-logo-background = #f22a25
$login-color = #ff3a3a
$login-btn-background = #fd4441

// 点击背景颜色
$click-active-background = #eee
// 点击效果
active-click()
  background: $click-active-background;
  border-radius: 50%;

// 垂直水平居中
flex-center()
  display: flex
  justify-content: center
  align-items: center

// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 渐变
gradient(leftColor, rightColor)
  background-image: linear-gradient(to right, leftColor , rightColor);